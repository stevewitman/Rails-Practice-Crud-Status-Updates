<h1>Status Updates</h1>

<p>
  <%= notice %>
</p>
<p>
  <%= link_to "New Status Update", new_message_path %>
</p>


<table>
  <thead>
    <tr>
      <th>
        User
      </th>
      <th>
        Status
      </th>
      <th>
        Likes
      </th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td>
          <%= link_to "#{message.user}", message_path(message) %>
        </td>
        <td>
          <%= message.status %>
        </td>
        <td>
          <%= message.likes %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
